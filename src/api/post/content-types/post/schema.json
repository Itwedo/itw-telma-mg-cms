
{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "post"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "attributes":
  {
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "head": {
      "type": "text"
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "bodyPart2": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "spotlight": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    }
  }
}
